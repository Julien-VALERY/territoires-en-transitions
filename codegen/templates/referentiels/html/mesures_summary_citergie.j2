<!DOCTYPE html>
<html class="font-sans" lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="utf-8"/>
    <title>
        Liste des mesures
    </title>
    <link href="styles.css" rel="stylesheet"/>
</head>
<body class="pb-30 bg-gray-100">
<main class="container mx-auto lg:px-20 px-4">
    <h1 class="text-3xl font-semibold my-10">
        Liste des mesures
    </h1>
    {% for theme in mesures.keys() %}
        <section class="mb-16">
            <h2 class="text-2xl font-semibold my-6">{{ theme }}</h2>
            <ul>
                {% for mesure in mesures[theme] %}
                    <li class="bg-white p-4 rounded my-4 grid grid-cols-1 lg:grid-cols-12 lg:gap-1">
                        <div class="relative lg:col-span-8">
                            <a href="mesure_{{ mesure.id }}.html">
                                <h3 class="text-xl font-semibold mb-6 pr-28">{{ mesure.nom }}</h3>
                            </a>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </section>
    {% endfor %}
</main>
<script src="main.js"></script>
</body>
</html>
