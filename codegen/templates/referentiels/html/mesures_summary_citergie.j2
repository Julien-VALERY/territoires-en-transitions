<!DOCTYPE html>
<html class="font-sans" lang="fr" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8"/>
    <meta name="robots" content="index, nofollow">>
    <title>
        Liste des mesures
    </title>
    <link href="styles.css" rel="stylesheet"/>
</head>
<body class="pb-30 bg-gray-100">
<nav class="bg-green-600">
    <ul class="container mx-auto lg:px-20 px-4 p-4 flex text-xl">
        <li class="mr-4">
            <a class="p-1 rounded hover:bg-gray-100 hover:text-gray-700 focus:bg-gray-100 focus:text-gray-700 active:text-gray-900 active:shadow-inner active:bg-white"
               href="/">
                Territoires en Transitions
            </a>
        </li>
        <li class="mr-4 flex-grow text-center" id="epci_nav_display">
        </li>
        <li class="mr-4">
            <a class="p-1 rounded hover:bg-gray-100 hover:text-gray-700 focus:bg-gray-100 focus:text-gray-700 active:text-gray-900 active:shadow-inner active:bg-white"
               href="mesures.html">
                Mesures
            </a>
        </li>
        <li class="mr-4">
            <a class="p-1 rounded hover:bg-gray-100 hover:text-gray-700 focus:bg-gray-100 focus:text-gray-700 active:text-gray-900 active:shadow-inner active:bg-white"
               href="indicateurs.html">
                Indicateurs
            </a>
        </li>
    </ul>
</nav>
<main class="container mx-auto lg:px-20 px-4">
    <header class="flex my-10">
        <h1 class="text-3xl font-semibold flex-grow">
            Liste des mesures
        </h1>
        <a href="mesure_ajout.html"
           class="border-green-700 border-2 hover:bg-green-100 active:bg-green-600 px-6
           py-3">Ajouter une mesure</a>
    </header>
    {% for thematique_id in mesures.keys() %}
        <section class="mb-16">
            <h2 class="text-2xl font-semibold my-6">{{ thematiques[thematique_id] }}</h2>
            <div data-custom-mesure-thematique="{{ thematique_id }}"></div>
            <ul>
                {% for mesure in mesures[thematique_id] %}
                    <li>
                        <a
                            class="bg-white p-4 rounded my-4 grid grid-cols-1
                            lg:grid-cols-12 lg:gap-1"
                            href="mesure_{{ mesure.id }}.html"
                        >
                            <h3 class="lg:col-span-8 text-xl font-semibold mb-6 pr-28">
                                {{ mesure.nom }}
                            </h3>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </section>
    {% endfor %}
</main>
<script src="mesures.js"></script>
<script src="navigation.js"></script>
<script src="ecpi_nav_display.js"></script>
</body>
</html>
